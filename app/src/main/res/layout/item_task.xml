    <TextView
        android:id="@+id/task_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:text="Назван взадачи"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/task_time"
        app:layout_constraintStart_toEndOf="@+id/task_progress"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/task_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20:00"
        android:textColor="@color/design_default_color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/task_title" />

    <TextView
        android:id="@+id/task_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text=" текс текс текс  текс текс текс текс  текс текс текс текстекс"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/task_progress"
        app:layout_constraintTop_toBottomOf="@+id/task_title" />

    <TextView
        android:id="@+id/task_progress"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_circle_green"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:paddingTop="12dp"
        android:paddingRight="0dp"
        android:paddingBottom="12dp"
        android:text="100%"
        android:textColor="@color/colorMessageText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>